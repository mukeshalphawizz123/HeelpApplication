<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlHomeToolbarId"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:background="@drawable/relativeredius">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivtextfeedbackreqdashboardbackId"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10sp"
            android:padding="6sp"
            android:src="@drawable/back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_21sdp"
            android:text="@string/costumer_service_chat"
            android:textColor="@color/Black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            app:fontFamily="@font/raleway_medium" />


        <RelativeLayout
            android:layout_marginTop="@dimen/_1sdp"
            android:id="@+id/rlnotificationHomeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivnotificationId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ring" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvHomeNotificationCountId"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/circle"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlnotificationHomeId"
            android:layout_marginStart="70dp">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivmissionid"
                android:layout_width="43sp"
                android:layout_height="41sp"
                android:layout_centerVertical="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/myrequestblue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDemandTitleRequestId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="15sp"
                android:layout_toEndOf="@+id/ivmissionid"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/title_request"
                android:textColor="@color/bluee"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlreqfeedbackviewdetailsid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvviewprofileid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_2sdp"
                android:fontFamily="@font/raleway_medium"
                android:text="@string/view_details"
                android:textColor="@color/viewDetailColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="13sp"
                android:layout_height="11dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tvviewprofileid"
                android:src="@drawable/view_detail_arrow" />

        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlHomeToolbarId"
        android:layout_marginBottom="@dimen/_50sdp">


        <RelativeLayout
            android:id="@+id/rlproposeebtnid"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_32sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:background="@drawable/litige_box">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5sp"
                android:fontFamily="@font/raleway_bold"
                android:paddingBottom="@dimen/_3sdp"
                android:text="@string/open_litigation"
                android:textColor="@color/lightRed"
                android:textSize="@dimen/_13sdp"
                app:fontFamily="@font/raleway_bold" />

        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyMissionDisputeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlproposeebtnid"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:nestedScrollingEnabled="false">

        </androidx.recyclerview.widget.RecyclerView>


        <RelativeLayout
            android:id="@+id/rlsupportmsgboxid"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/rlproposeebtnid"
            android:layout_marginStart="20sp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="50sp"
            android:background="@drawable/textbackground"
            android:paddingBottom="30sp"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="10sp"
                android:background="@android:color/transparent"
                android:hint="@string/support_message"
                android:textColorHint="@color/Black"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltimeid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlsupportmsgboxid"
            android:layout_marginTop="25dp"
            android:visibility="gone">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvtimeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20sp"
                android:text="@string/today_4_12pm"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/rltimeid"
            android:layout_marginStart="110dp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="20sp"
            android:layout_marginBottom="100sp"
            android:background="@drawable/bluetextbox"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5sp"
                android:text="@string/let_me_know_when_you_complete"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="normal" />


        </RelativeLayout>

    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10sp"
        app:cardCornerRadius="26dp"
        app:cardElevation="5sp">

        <LinearLayout
            android:id="@+id/llchatboxLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_gravity="right"
            android:layout_marginEnd="5sp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="3">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivgifbuttonid"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerVertical="true"
                    android:padding="3dp"
                    android:src="@drawable/sendarrow" />

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rltypemsgid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_marginBottom="10sp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ettypemsgid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_50sdp"
                android:background="@android:color/transparent"
                android:hint="@string/type_a_message"
                android:padding="8sp"
                android:paddingStart="@dimen/_2sdp"
                android:textSize="14sp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>