<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_2sdp">


        <RelativeLayout
            android:id="@+id/editorRel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/rlediterRowid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvediterid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="15sp"
                    android:layout_marginEnd="50sp"
                    android:text="@string/editer"
                    android:textColor="@color/Black"
                    android:textSize="18sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="30sp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="5sp"
                    android:src="@drawable/editprofilepin" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlcreditcardimghhgid"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:layout_below="@+id/rlediterRowid"
                android:background="@drawable/cardbox">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCardHolderNameRowId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:hint="@string/card_holder_name"
                    android:padding="@dimen/_2sdp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal">

                </androidx.appcompat.widget.AppCompatEditText>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivChipRowId"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/cardchip" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etCardNumberRowId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_marginEnd="@dimen/_60sdp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:letterSpacing="0.02"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:text="0000000000000000"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="normal" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvValidityRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etCardNumberRowId"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:text="@string/validity"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etExpiryRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/etCardNumberRowId"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_toEndOf="@+id/tvValidityRowId"
                    android:background="@android:color/transparent"
                    android:hint="@string/mm_yy"
                    android:maxLength="5"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="@dimen/_10sdp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/etCardNumberRowId"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_58sdp"
                    android:paddingBottom="@dimen/_1sdp"
                    android:src="@drawable/card_visa" />


            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>