<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/rlbackgroundid"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_marginBottom="15sp"
                android:background="@drawable/creditcardbackg">

                <RelativeLayout
                    android:id="@+id/rlcreditcardpaymentsId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlcreditcardToolbarId"
                    android:layout_centerHorizontal="true">


                    <RelativeLayout
                        android:id="@+id/rlcreditcardpaymentId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ivcreditcardtextidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:layout_marginTop="15sp"
                            android:text="@string/amount" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ivcreditcardpriceidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="60sp"
                            android:layout_marginTop="15sp"
                            android:layout_toEndOf="@+id/ivcreditcardtextidd"
                            android:text="600 €" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlcreditcardpaymentId"
                        android:layout_centerHorizontal="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ivcreditcardtexttwoidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15sp"
                            android:text="@string/service_fees" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ivcreditcardtextthreeidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivcreditcardtextfouridd"
                            android:layout_marginStart="15sp"
                            android:text="@string/bank_fees" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ivcreditcardtextfouridd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivcreditcardtexttwoidd"
                            android:layout_marginStart="50sp"
                            android:text="+" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/ivcreditcardpricetwoidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="70dp"
                            android:layout_toEndOf="@+id/ivcreditcardtextfouridd"
                            android:text=": 600 €" />


                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rltotalpayerid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlcreditcardpaymentsId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20sp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/amount_to_pay"
                        android:textColor="@color/Black"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlpayerbtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rltotalpayerid"
                    android:layout_centerHorizontal="true">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="135dp"
                        android:layout_height="80sp"
                        android:layout_marginTop="10sp"
                        android:src="@drawable/roundedrectanglewhitebtn" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="610,5 €"
                        android:textStyle="bold"
                        android:textColor="@color/Black"
                        android:textSize="17dp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlpayerbtnId"
                    android:layout_centerHorizontal="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="0.1dp"
                        android:textStyle="normal"
                        android:text="@string/choose_a_payment_method"
                        android:textColor="@color/Black"
                        android:textSize="20sp" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlcreditcardToolbarId"
                    android:layout_width="match_parent"
                    android:layout_height="160sp"
                    android:background="@drawable/relativeredius">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivdashboardcreditcardbackId"
                        android:layout_width="30sp"
                        android:layout_height="33dp"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="10sp"
                        android:padding="5sp"
                        android:src="@drawable/back" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivnotificationcreditcardId"
                        android:layout_width="28dp"
                        android:layout_height="30sp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="15sp"
                        android:src="@drawable/ring" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivnotificationcreditcardId"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="50sp"
                        android:text="@string/payments"
                        android:textColor="@color/lessBlack"
                        android:textSize="28sp"
                        android:textStyle="normal" />


                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llpaymentoptionId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlbackgroundid"
                android:layout_marginStart="15sp"
                android:layout_marginEnd="15sp"
                android:layout_marginTop="25dp"
                android:weightSum="2">


                <RelativeLayout
                    android:id="@+id/rlcreditcardid"
                    android:layout_width="0sp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:background="@drawable/paymentbackimg">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/IvCreditcardpointId"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/yellowcircle"
                        android:layout_marginTop="5sp"
                        android:layout_alignParentRight="true"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivcreditcardpaymentid"
                        android:layout_width="130sp"
                        android:layout_height="120dp"
                        android:layout_marginTop="15sp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/creditcard" />

                    <RelativeLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/bottomRel"
                        android:background="@drawable/blankbtn"
                        android:layout_centerHorizontal="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="@dimen/_11sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="@string/credit_card"/>

                    </RelativeLayout>



                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlMaCanotteId"
                    android:layout_width="0sp"
                    android:layout_height="210dp"
                    android:layout_weight="1"
                    android:background="@drawable/paymentbackimg">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/IvwalletpointId"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="5sp"
                        android:src="@drawable/yellowcircle"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivpricepoolpaymentid"
                        android:layout_width="130sp"
                        android:layout_height="120dp"
                        android:layout_marginTop="15sp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/prizepool" />

                    <RelativeLayout
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentBottom="true"
                        android:id="@+id/bottomRelid"
                        android:background="@drawable/blankbtn"
                        android:layout_centerHorizontal="true">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            android:textSize="@dimen/_11sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:text="@string/wallet"/>

                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlpayerId"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_45sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="50sp"
                android:layout_marginTop="55dp"
                android:background="@drawable/blankbtn"
                android:layout_below="@+id/llpaymentoptionId">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/TvpayerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="20dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toEndOf="@+id/TvpayerId"
                    android:src="@drawable/arrowright" />




            </RelativeLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>