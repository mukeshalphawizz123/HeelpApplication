<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserProfileEditActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvdeshbordid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="@string/my_profile"
                    android:textColor="@color/lessBlack"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivnotificationeditprofileId"
                    android:layout_width="28sp"
                    android:layout_height="28sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/ring" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivdashboardcreditcardbackId"
                    android:layout_width="30sp"
                    android:layout_height="33dp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="25sp"
                    android:layout_marginEnd="10sp"
                    android:padding="5sp"
                    android:src="@drawable/back" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivuserprofileimageId"
                    android:layout_width="100dp"
                    android:layout_height="100sp"
                    android:layout_below="@+id/tvdeshbordid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/dashboarddummyimg" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iveditprofilepinId"
                    android:layout_width="30sp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/tvdeshbordid"
                    android:layout_marginStart="-30dp"
                    android:layout_marginTop="7dp"
                    android:layout_toEndOf="@+id/ivuserprofileimageId"
                    android:src="@drawable/editpin" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivuserprofileimageId"
                    android:layout_centerHorizontal="true"
                    android:text="@string/user_name"
                    android:textColor="@color/lessBlack"
                    android:textSize="19sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:id="@+id/rlusernameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvnameid"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvdesinationid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/statut"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvdesinationeditid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/tvdesinationid"
                        android:text="@string/ex_master_student"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iveditprofilepinsId"
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:layout_toEndOf="@+id/tvdesinationeditid"
                        android:src="@drawable/editpin" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlnameid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlusernameid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/name"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/EtNameid"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="15sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_reguiar"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/lessBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlusernamebtnid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlnameid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/username"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/EtUsernameId"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="15sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_reguiar"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/lessBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlstatusid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlusernamebtnid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="Statut"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/EtStatusId"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="15sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_reguiar"
                        android:singleLine="true"
                        android:textColor="@color/lessBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlemailid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlstatusid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_25sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/email"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/EtEmailID"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="15sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_reguiar"
                        android:singleLine="true"
                        android:textColor="@color/lessBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlpassesid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlemailid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/password"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/EtPasswordID"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="15sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_reguiar"
                        android:inputType="textPassword"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/lessBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlbdayid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlpassesid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/birth"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />

                    <!--         <androidx.appcompat.widget.AppCompatEditText
                                 android:layout_width="match_parent"
                                 android:layout_height="50sp"
                                 android:layout_centerVertical="true"
                                 android:layout_marginStart="85dp"
                                 android:layout_marginEnd="15sp"
                                 android:background="@android:color/transparent"
                                 android:inputType="textPassword"
                                 android:singleLine="true"
                                 android:textColor="@color/lessBlack"
                                 android:textSize="16sp"
                                 android:textStyle="normal" />


         -->

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/TvdobId"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_marginStart="95dp"
                        android:layout_marginLeft="5sp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:fontFamily="@font/poppins_reguiar"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textAlignment="textStart"
                        android:textColor="@color/Black"
                        android:textSize="14sp" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlcountryid"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_below="@+id/rlbdayid"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:background="@drawable/editgraybtn">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="100sp"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:src="@drawable/editbluebtn" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:text="@string/country"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/EtcountryID"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="95dp"
                        android:layout_marginEnd="15sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_reguiar"
                        android:inputType="text"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textColor="@color/lessBlack"
                        android:textSize="16sp"
                        android:textStyle="normal" />


                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlcountryid"
                    android:layout_margin="15sp"
                    android:layout_marginBottom="40sp"
                    app:cardBackgroundColor="@color/lessgray"
                    app:cardCornerRadius="15sp"
                    app:cardElevation="10sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivdescriptionimageid"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:src="@drawable/presentation" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvdescriptiontextid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/presentation"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvpresentationidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvdescriptiontextid"
                            android:layout_marginTop="5sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:background="@android:color/transparent"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,"
                            android:textColor="@color/gray"
                            android:textSize="13dp"
                            android:textStyle="normal" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvlevelofstudyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvpresentationidd"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="niveau d'etudes:"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvlevelofstudyyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvpresentationidd"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvlevelofstudyid"
                            android:background="@android:color/transparent"
                            android:text="@string/ex_bac_4"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvfiledofstudyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvlevelofstudyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="domaine d'etudes:"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvfiledofstudyyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvlevelofstudyyid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvfiledofstudyid"
                            android:background="@android:color/transparent"
                            android:text="@string/ex_ingerierie_medecine"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvunivercityid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvfiledofstudyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/universite_ecole"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvunivercityyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvfiledofstudyid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvunivercityid"
                            android:background="@android:color/transparent"
                            android:text="@string/ex_universite_de_paris"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcategoriesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvunivercityid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="Categories d'interest sur heelp:"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvcategoriessid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriesid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:background="@android:color/transparent"
                            android:text="@string/mecanique_langues"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcompetencesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriessid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/competences"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/tvcompetencesssid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriessid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvcompetencesid"
                            android:background="@android:color/transparent"
                            android:text="@string/mecanique_infomatique"
                            android:textColor="@color/gray"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:id="@+id/rlnextpagerid"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/card"
                    android:layout_marginLeft="20sp"
                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_shape"
                    android:padding="2dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_5sdp"
                        android:text="@string/save"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>