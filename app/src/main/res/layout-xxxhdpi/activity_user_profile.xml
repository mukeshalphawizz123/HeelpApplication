<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivbackproffilemsgId"
                    android:layout_width="30sp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="10sp"
                    android:padding="6dp"
                    android:src="@drawable/back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvhelperprofileid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="@string/helper_profile"
                    android:textColor="@color/Black"
                    android:textSize="30sp"
                    android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivnotificationuserprofileId"
                    android:layout_width="28dp"
                    android:layout_height="30sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/ring" />

                <RatingBar
                    android:id="@+id/rbhelperprofileId"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvhelperprofileid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6sp"
                    android:progressTint="#D8FF7F00"
                    android:rating="3.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivuserprofileimageId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/rbhelperprofileId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/userprofileimage" />

                <RelativeLayout
                    android:id="@+id/rldiscussid"
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    android:layout_below="@+id/rbhelperprofileId"
                    android:layout_margin="10sp"
                    android:layout_toEndOf="@+id/ivuserprofileimageId"
                    android:background="@drawable/discussbtn">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlusernameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivuserprofileimageId"
                    android:layout_centerInParent="true"
                    android:layout_margin="10sp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvnameid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mr_smith"
                        android:textColor="@color/lessBlack"
                        android:textSize="19sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvdesinationid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvnameid"
                        android:layout_centerInParent="true"
                        android:text="@string/engineer"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlcircleprrogressbarid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlusernameid"
                    android:layout_centerHorizontal="true">


                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donutprogressid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:donut_finished_color="#FCC543"
                        app:donut_finished_stroke_width="5sp"
                        app:donut_progress="60"
                        app:donut_text_color="#FCC543"
                        app:donut_unfinished_stroke_width="5sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlratingnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlcircleprrogressbarid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profilebox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/reviews"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlratingnameid"
                    android:layout_margin="15sp"
                    android:layout_marginBottom="15sp"
                    app:cardBackgroundColor="@color/lessgray"
                    app:cardCornerRadius="15sp"
                    app:cardElevation="10sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivdescriptionimageid"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:src="@drawable/presentation" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvdescriptiontextid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/presentation"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvpresentationidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvdescriptiontextid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries,"
                            android:textColor="@color/lessBlack"
                            android:textSize="13dp"
                            android:textStyle="normal" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvlevelofstudyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvpresentationidd"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/niveau_d_etudes"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvlevelofstudyyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvpresentationidd"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvlevelofstudyid"
                            android:text="@string/ex_bac_4"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvfiledofstudyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvlevelofstudyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/domaine_d_etudes"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvfiledofstudyyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvlevelofstudyyid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvfiledofstudyid"
                            android:text="@string/ex_ingerierie_medecine"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvunivercityid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvfiledofstudyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/universite_ecole"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvunivercityyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvfiledofstudyid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvunivercityid"
                            android:text="@string/ex_universite_de_paris"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcategoriesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvunivercityid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/categories_d_interest_sur_heelp"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcategoriessid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriesid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="5sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="mecanique , langues."
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcompetencesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriessid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/competences"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcompetencesssid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriessid"
                            android:layout_marginLeft="10sp"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/tvcompetencesid"
                            android:text="@string/mecanique_infomatique"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</layout>