<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15sp"
            app:cardElevation="15sp">

            <RelativeLayout
                android:id="@+id/rlratingnameid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvratingnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debra Martin"
                    android:textColor="@color/Black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvdateid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5sp"
                    android:text="June 2018"
                    android:textColor="@color/blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvratingnamesid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvratingnameid"
                    android:layout_marginTop="5sp"
                    android:text="@string/reviews"
                    android:textColor="@color/Black"
                    android:textSize="17sp" />


                <RatingBar
                    android:id="@+id/rbhelperprofileId"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvratingnameid"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="6dp"
                    android:layout_toEndOf="@+id/tvratingnamesid"
                    android:progressTint="#D8FF7F00"
                    android:rating="3.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvratingpersentageid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvratingnameid"
                    android:layout_toEndOf="@+id/rbhelperprofileId"
                    android:text="4.8"
                    android:textColor="@color/Black"
                    android:textSize="17sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvratingnamesid"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvProfileCommentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lessBlack"
                        android:textSize="13sp"
                        android:textStyle="normal" />

                </RelativeLayout>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>