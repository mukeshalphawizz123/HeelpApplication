<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rlongoingbackgroundid"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="5sp"
            android:background="@drawable/completebackg">


            <RelativeLayout
                android:id="@+id/rldummyimgid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="15sp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserInprogMissionId"
                    android:layout_width="60sp"
                    android:layout_height="60sp"
                    android:src="@drawable/dashboarddummyimg"
                    app:civ_border_color="@color/lessBlack"
                    app:civ_border_width="@dimen/_1sdp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUserNameInProgMissionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivUserInprogMissionId"
                    android:layout_centerHorizontal="true"
                    android:text="@string/zeeshan"
                    android:textColor="@color/bluee"
                    android:textSize="@dimen/_9sdp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15sp"
                android:layout_toEndOf="@+id/rldummyimgid">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvtextidd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_comments"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvCommentInProgMissionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvtextidd"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />

            </RelativeLayout>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvOnGoingRowId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlongoingbackgroundid" />

    </RelativeLayout>

</layout>