<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlHomeToolbarId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_110sdp"
            android:background="@drawable/relativeredius">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivbackmsgId"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_6sdp"
                android:src="@drawable/back" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvmessangerid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="@string/messenger"
                android:textColor="@color/tabselected"
                android:textSize="25sp" />

            <RelativeLayout
                android:id="@+id/rlmessageuserprofileid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvmessangerid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20sp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivUserMsgId"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_75sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/dashboarddummyimg"
                    app:civ_border_color="@color/lessBlack"
                    app:civ_border_width="@dimen/_1sdp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="50sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_toEndOf="@+id/ivUserMsgId">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserNameMsgId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/bluee"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserProffesionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvUserNameMsgId"
                        android:textSize="@dimen/_11sdp" />


                </RelativeLayout>


            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivnotificationHomeId"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ring" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlHomeToolbarId"
            android:layout_marginBottom="80sp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvChatId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp" />


        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:id="@+id/cvChatId"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_50sdp"
            app:cardCornerRadius="26dp"
            app:cardElevation="5sp">

            <LinearLayout
                android:id="@+id/llchatboxLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="50sp"
                android:layout_gravity="right"
                android:layout_marginEnd="5sp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivsharefilebuttonid"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:src="@drawable/paperclip" />

                    <RelativeLayout
                        android:visibility="gone"
                        android:id="@+id/rlVoiceRecordingId"
                        android:layout_width="wrap_content"
                        android:gravity="right"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/ivsharefilebuttonid"
                        android:layout_weight="1">


                        <RelativeLayout
                            android:visibility="gone"
                            android:id="@+id/rlVoiceRecordingStopId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_2sdp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivStopId"
                                android:layout_centerHorizontal="true"
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:src="@drawable/stop" />

                            <Chronometer
                                android:id="@+id/tvTimerId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivStopId"
                                android:layout_centerHorizontal="true"
                                android:textSize="8sp" />

                        </RelativeLayout>


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivrecordedbuttonid"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:padding="2dp"
                            android:src="@drawable/mic"
                            android:visibility="visible" />


                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivgifbuttonid"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/rlVoiceRecordingId"
                        android:layout_weight="1"
                        android:padding="2dp"
                        android:src="@drawable/sendarrow" />

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rltypemsgid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="left"
                android:layout_marginStart="10sp"
                android:layout_marginEnd="100sp">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ettypemsgid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="@string/type_a_message"
                    android:padding="2sp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingTop="2sp"
                    android:paddingEnd="5sp"
                    android:textSize="14sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_height="wrap_content">

        <com.devlomi.record_view.RecordView
            android:id="@+id/record_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/record_button"
            app:slide_to_cancel_arrow="@drawable/recv_ic_arrow"
            app:slide_to_cancel_arrow_color="#000000"
            app:slide_to_cancel_bounds="10dp"
            app:slide_to_cancel_margin_right="10dp"
            app:slide_to_cancel_text="Slide To Cancel"
            app:counter_time_color="#ff0000"
            />

        <com.devlomi.record_view.RecordButton
            android:id="@+id/record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle"
            android:scaleType="centerInside"
            app:mic_icon="@drawable/recv_ic_mic_white"
            android:layout_alignParentEnd="true"
          />


    </RelativeLayout>
</RelativeLayout>