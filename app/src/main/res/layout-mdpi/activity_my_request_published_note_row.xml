<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginBottom="15sp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:layout_marginTop="20sp"
            android:layout_marginStart="15sp"
            android:layout_marginEnd="15sp"
            android:background="@drawable/proposeebackg">


            <RelativeLayout
                android:id="@+id/rluserprofileid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp">

                <RatingBar
                    android:id="@+id/ratingpubishedidd"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6sp"
                    android:progressTint="#D8FF7F00"
                    android:rating="3.5"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivmymissionid"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/ratingpubishedidd"
                    android:layout_marginTop="4sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/userprofileimage" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlofferid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rluserprofileid"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="15sp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvofferid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offers"
                    android:textStyle="bold"
                    android:textColor="@color/Black"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvNoteBudgetsRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tvofferid"
                    android:text="100 â‚¬"
                    android:textColor="#33D048"
                    android:textSize="12sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2sp"
                android:layout_marginEnd="10sp">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDaysNotesRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_2_days_ago"
                    android:textColor="@color/gray"
                    android:textSize="10sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rltextandtimneeidd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_toEndOf="@+id/rluserprofileid">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvDesBudgetsRowId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="25dp"
                    android:text="@string/i_can_do_the_job_for_you"
                    android:textColor="@color/Black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rltextandtimneeidd"
                android:layout_marginTop="20sp"
                android:layout_toEndOf="@+id/rlofferid"
                android:gravity="center_vertical"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/rldiscuteridd"
                    android:layout_width="0sp"
                    android:layout_height="44sp"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10sp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_marginStart="8sp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/user_rounded_back">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="45sp"
                            android:text="@string/discuss"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/bluee"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlacceptid"
                    android:layout_width="0sp"
                    android:layout_height="35sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5sp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_rounded">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10sp"
                        android:src="@drawable/circleimg"
                        android:text="@string/accept_offer"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


    </RelativeLayout>

</layout>