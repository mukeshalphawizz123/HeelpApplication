<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivlogoid"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivbannerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlLoginId"
        android:layout_below="@+id/ivlogoid"
        android:layout_marginStart="15sp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="15sp"
        android:src="@drawable/optionbanneras" />
    <RelativeLayout
        android:id="@+id/rlLoginId"
        android:layout_width="180sp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:layout_above="@+id/rlSignupId"
        android:background="@drawable/selected_box">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvLoginId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/log_in"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlSignupId"
        android:layout_width="180sp"
        android:layout_height="42dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/bottomLayout"
        android:background="@drawable/unselected_box">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSignupId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/register"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:textStyle="normal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:id="@+id/bottomLayout"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlFacbookLoginId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/fbbtn"
            android:gravity="center"
            android:padding="2dp">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlgoogleLoginId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="5sp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/googlebtn"
            android:gravity="center"
            android:padding="2dp">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_30sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUnderLineId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textColor="@color/Black"
                android:textSize="13dp"
                android:textStyle="normal" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
