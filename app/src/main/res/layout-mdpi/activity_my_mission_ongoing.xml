<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <RelativeLayout
            android:id="@+id/rlHomeToolbarId"
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:background="@drawable/relativeredius">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivmissionongoingdashboardbackId"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10sp"
                android:padding="6sp"
                android:src="@drawable/back" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivnotificationId"
                android:layout_width="28sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/ring" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivnotificationId"
                android:layout_marginStart="60sp">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivmissionid"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="15sp"
                    android:src="@drawable/linechartred" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="15sp"
                    android:layout_toEndOf="@+id/ivmissionid"
                    android:fontFamily="@font/raleway_medium"
                    android:text="@string/mission_title"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlmissongoingviewdetailsid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="5sp"
                android:layout_marginBottom="1dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvviewprofileid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/_2sdp"
                    android:text="@string/view_details"
                    android:textColor="@color/viewDetailColor"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="13sp"
                    android:layout_height="11dp"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/tvviewprofileid"
                    android:src="@drawable/view_detail_arrow" />


            </RelativeLayout>


        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlHomeToolbarId"
            android:scrollbars="none">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:id="@+id/rlongoingbtnid"
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/encourse">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="5sp"
                        android:paddingBottom="@dimen/_4sdp"
                        android:text="@string/in_progress"
                        android:textColor="@color/orangeColor"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlongoningtextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlongoingbtnid"
                    android:layout_marginLeft="15sp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_1_er_livrable"
                        android:textAlignment="center"
                        android:textColor="#FF9538"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlongoingbackgroundid"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_below="@+id/rlongoningtextId"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/completebackg">


                    <RelativeLayout
                        android:id="@+id/rldummyimgid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15sp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivUserInprogMissionId"
                            android:layout_width="60sp"
                            android:layout_height="60sp"
                            android:src="@drawable/dummyuserimg"
                            app:civ_border_color="@color/lessBlack"
                            app:civ_border_width="@dimen/_1sdp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserNameInProgMissionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivUserInprogMissionId"
                            android:layout_centerHorizontal="true"
                            android:text="@string/zeeshan"
                            android:textColor="@color/bluee"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="15sp"
                        android:layout_toEndOf="@+id/rldummyimgid">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvtextidd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_comments"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCommentInProgMissionId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvtextidd"
                            android:textColor="@color/Black"
                            android:textSize="@dimen/_11sdp"
                            android:textStyle="normal" />


                    </RelativeLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlrecyyleid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlongoingbackgroundid"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginRight="5sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvongoingfileuploadid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlcommentboxid"
                    android:layout_width="wrap_content"
                    android:layout_height="180dp"
                    android:layout_below="@+id/rlrecyyleid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="15sp"
                    android:background="@drawable/grayblankbox">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvongoingidd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:fontFamily="@font/raleway_medium"
                        android:text="@string/send_a_new_deliverable"
                        android:textColor="@color/orangeColor"
                        android:textSize="14dp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etMsgBoxInprogressId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/rlbottonbtnid"
                        android:layout_below="@+id/tvongoingidd"
                        android:layout_marginStart="10sp"
                        android:layout_marginTop="20sp"
                        android:layout_marginEnd="10sp"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/raleway_medium"
                        android:gravity="top"
                        android:text="@string/my_comment_i_finished_again"
                        android:textColor="@color/lessBlack"
                        android:textSize="@dimen/_10sdp" />

                    <RelativeLayout
                        android:id="@+id/rlbottonbtnid"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/cardimage"
                        android:gravity="center"
                        android:padding="5sp">


                        <RelativeLayout
                            android:id="@+id/rlmyMissProgressFileId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="15sp">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivImageid"
                                android:layout_width="13sp"
                                android:layout_height="17sp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/addfile" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivImageid"
                                android:layout_marginBottom="2sp"
                                android:singleLine="true"
                                android:text="@string/piece_jointe"
                                android:textColor="@color/white"
                                android:textSize="9sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/rlmyMissProgressImagId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="10sp"
                            android:layout_marginEnd="10sp"
                            android:layout_toEndOf="@+id/rlmyMissProgressFileId">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/ivaddimageid"
                                android:layout_width="13sp"
                                android:layout_height="17sp"
                                android:layout_centerHorizontal="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/addimage" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivaddimageid"
                                android:layout_marginBottom="2sp"
                                android:singleLine="true"
                                android:text="@string/image"
                                android:textColor="@color/white"
                                android:textSize="9sp" />

                        </RelativeLayout>


                    </RelativeLayout>


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvimageviewcardid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlcommentboxid"
                    android:layout_marginStart="15sp"
                    android:layout_marginTop="5sp"
                    android:layout_marginEnd="15sp"
                    app:cardBackgroundColor="@color/lessgray"
                    app:cardCornerRadius="2sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvselectimageId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:id="@+id/rlmymissionongoingSendbrtnId"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/cvimageviewcardid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:background="@drawable/blankbtn">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_9sdp"
                        android:text="@string/send"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlproblemid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlmymissionongoingSendbrtnId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30sp"
                    android:layout_marginBottom="35dp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvmymissionongoingtextid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/report_a_problem"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="italic" />

                </RelativeLayout>

            </RelativeLayout>


        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/pbMymissionProgressId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible" />

        </RelativeLayout>


    </RelativeLayout>

</layout>