<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10sp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivlogoid"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:src="@drawable/logo" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvcomfirmid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivlogoid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="@string/comfirmation"
                android:textColor="@color/Black"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvcomfirmationid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvcomfirmid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:text="@string/offer_sent_succefully"
                android:textColor="@color/Black"
                android:textSize="@dimen/_15sdp"
                android:textStyle="normal" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivcomfirmationid"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_below="@+id/tvcomfirmationid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:src="@drawable/righttick" />

            <RelativeLayout
                android:id="@+id/RlcomfirmationsendbtnId"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/ivcomfirmationid"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="65sp"
                android:background="@drawable/blankbtn">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/back"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_17sdp"
                    android:textStyle="normal" />


            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</layout>