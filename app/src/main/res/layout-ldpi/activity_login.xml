<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivlogoid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivlogoid">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvloginid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="@string/log_in"
                android:textColor="@color/Black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rlsignupbackgroundid"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@+id/tvloginid" />


            <RelativeLayout
                android:id="@+id/cvloginid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvloginid"
                android:gravity="center_vertical">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="18sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rounded_rectangle"
                    app:riv_corner_radius="10sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="18dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="25dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivemailId"
                            android:layout_width="23dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etemailsignupid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ivemailId"
                            android:background="@android:color/transparent"
                            android:gravity="left"
                            android:textSize="16sp"
                            android:textStyle="normal">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tiewEmailsignupId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:background="@android:color/transparent"
                                android:hint="@string/email"
                                android:inputType="text"
                                android:padding="4dp"
                                android:singleLine="true"
                                android:textColor="@color/Black"
                                android:textColorHint="@color/blue"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </RelativeLayout>

                    <View
                        android:id="@+id/viewIdemail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ivpasswordid"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="20sp"
                        android:background="@color/colorAccent" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="25dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivpasswordid"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/key" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etpasswordid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ivpasswordid"
                            android:background="@android:color/transparent"
                            android:gravity="left"
                            android:textSize="16sp"
                            android:textStyle="normal">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tiewPasswordId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10sp"
                                android:background="@android:color/transparent"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:padding="4dp"
                                android:singleLine="true"
                                android:textColor="@color/Black"
                                android:textColorHint="@color/blue"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/viewIdpassword"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ivpasswordid"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="20sp"
                        android:background="@color/colorAccent" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cvloginid"
                android:layout_marginTop="7dp">


                <RelativeLayout
                    android:id="@+id/rlradioid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16sp">


                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/radioid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="15sp"
                        android:button="@drawable/custom_checkbox"
                        android:text="@string/remember_me"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="normal" />

                    <RelativeLayout
                        android:id="@+id/rlnextpagerid"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/half_blue_box"
                        android:gravity="left|center_vertical"
                        android:padding="2dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="@string/connect"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkboxloginid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlnextpagerid"
                        android:layout_marginStart="@dimen/_28sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginEnd="10sp"
                        android:buttonTint="#4ADF4D"
                        android:checked="true"
                        android:singleLine="true"
                        android:text="J'accepte les conditions generales d'utilisation"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvtermsandconditionid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/checkboxloginid"
                        android:layout_centerHorizontal="true"
                        android:text="@string/see_more"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/bottomLayout"
                    android:layout_below="@+id/rlradioid"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rlFacbookLoginId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="45dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/fbbtn"
                        android:gravity="center"
                        android:padding="2dp">

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/rlgoogleLoginId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="5sp"
                        android:layout_marginRight="45dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/googlebtn"
                        android:gravity="center"
                        android:padding="2dp">

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/bottomLayout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentBottom="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvdonthaveaccountid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tvsignuppageid"
                        android:layout_centerHorizontal="true"
                        android:text="@string/you_d_ont_have_an_account"
                        android:textColor="@color/lessBlack"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvsignuppageid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/tvtextunderlineid"
                        android:layout_centerHorizontal="true"
                        android:text="@string/register"
                        android:textColor="#15A8DB"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="normal" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvtextunderlineid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10sp"
                        android:paddingBottom="@dimen/_8sdp"
                        android:text="@string/forgot_password"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="normal" />


                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
