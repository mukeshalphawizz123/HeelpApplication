<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivbackproffilemsgId"
                    android:layout_width="30sp"
                    android:layout_height="35dp"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="10sp"
                    android:padding="6dp"
                    android:src="@drawable/back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvhelperprofileid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:text="@string/helper_profile"
                    android:textColor="@color/Black"
                    android:textSize="30sp"
                    android:textStyle="normal" />


                <RelativeLayout
                    android:id="@+id/rlnotificationHomeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivnotificationuserprofileId"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:padding="@dimen/_3sdp"
                        android:src="@drawable/ring" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvHomeNotificationCountId"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:visibility="gone" />


                </RelativeLayout>

                <RatingBar
                    android:id="@+id/rbhelperprofileId"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvhelperprofileid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6sp"
                    android:progressTint="#D8FF7F00"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp" />

                <RelativeLayout
                    android:id="@+id/rlRoudedid"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_below="@+id/rbhelperprofileId"
                    android:layout_centerHorizontal="true">



                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/ivuserprofileimageId"
                        android:layout_width="135dp"
                        android:layout_height="135dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5sp"
                        android:scaleType="fitXY"
                        android:src="@drawable/dashboarddummyimg"
                        android:background="@drawable/image_rounded" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rldiscussid"
                    android:layout_width="wrap_content"
                    android:layout_height="100sp"
                    android:layout_below="@+id/rbhelperprofileId"
                    android:layout_margin="10sp"
                    android:layout_toEndOf="@+id/rlRoudedid"
                    android:background="@drawable/discussbtn">

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlusernameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlRoudedid"
                    android:layout_centerInParent="true"
                    android:layout_margin="10sp">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvnameid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/lessBlack"
                        android:textSize="19sp"
                        android:textStyle="normal" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvdesinationid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvnameid"
                        android:layout_centerInParent="true"
                        android:textColor="@color/gray"
                        android:textSize="16dp"
                        android:textStyle="normal" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlcircleprrogressbarid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlusernameid"
                    android:layout_centerHorizontal="true">


                    <com.github.lzyzsd.circleprogress.DonutProgress
                        android:id="@+id/donutprogressid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:donut_finished_color="#FCC543"
                        app:donut_finished_stroke_width="5sp"
                        app:donut_text_color="#fff"
                        app:donut_unfinished_stroke_width="5sp" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvRatingCountPlusMoreId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/lightYellow"
                        app:textSize="@dimen/_10sdp" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlratingnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlcircleprrogressbarid"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10sp">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/profilebox" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/reviews"
                        android:textColor="@color/Black"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </RelativeLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlratingnameid"
                    android:layout_margin="15sp"
                    android:layout_marginBottom="15sp"
                    app:cardBackgroundColor="@color/lessgray"
                    app:cardCornerRadius="15sp"
                    app:cardElevation="10sp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10sp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivdescriptionimageid"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_marginStart="5sp"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:src="@drawable/presentation" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvdescriptiontextid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/presentation"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvpresentationidd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvdescriptiontextid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:textColor="@color/lessBlack"
                            android:textSize="13dp"
                            android:textStyle="normal" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvlevelofstudyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvpresentationidd"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/level_of_studies"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvlevelofstudyyid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvlevelofstudyid"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvfiledofstudyid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvlevelofstudyyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/field_of_studies"
                            android:textColor="@color/Black"
                            android:textSize="16dp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvfiledofstudyyid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvfiledofstudyid"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvunivercityid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvfiledofstudyyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/university_school"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvunivercityyid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvunivercityid"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcategoriesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvunivercityyid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/categories_of_interest_on_heelp"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcategoriessid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriesid"
                            android:layout_marginTop="5sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            tools:ignore="HardcodedText" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcompetencesid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcategoriessid"
                            android:layout_marginTop="10sp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:text="@string/skills"
                            android:textColor="@color/Black"
                            android:textSize="16sp"
                            android:textStyle="bold" />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvcompetencesssid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvcompetencesid"
                            android:layout_marginTop="13dp"
                            android:layout_toEndOf="@+id/ivdescriptionimageid"
                            android:textColor="@color/lessBlack"
                            android:textSize="12sp"
                            android:textStyle="normal" />


                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>


</layout>