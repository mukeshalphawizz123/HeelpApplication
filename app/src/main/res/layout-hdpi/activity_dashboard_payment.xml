<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/rlpaymentToolbarId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:background="@drawable/relativeredius">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivdashboardpaymentbackId"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="10sp"
                android:padding="6sp"
                android:src="@drawable/back" />

            <RelativeLayout
                android:id="@+id/rlnotificationHomeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivnotificationId"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_3sdp"
                    android:src="@drawable/ring" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvHomeNotificationCountId"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/circle"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />


            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:letterSpacing="0.1"
                android:text="@string/payments"
                android:textColor="@color/lessBlack"
                android:textSize="28sp"
                android:textStyle="normal" />

        </RelativeLayout>


        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rlprizepoolpaymentid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivprizepoolimgId"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/prizepool" />


            <RelativeLayout
                android:id="@+id/rlprizepoolbtnid"
                android:layout_width="@dimen/_128sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_below="@+id/ivprizepoolimgId"
                android:layout_marginTop="10sp"
                android:background="@drawable/blankbtn">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivprizepoolbtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/wallet"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlcreditcardpaymentid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivcreditcardimgId"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/creditcard" />


            <RelativeLayout
                android:id="@+id/rlcreditcardbtnid"
                android:layout_width="@dimen/_128sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_below="@+id/ivcreditcardimgId"
                android:layout_marginTop="10sp"
                android:background="@drawable/blankbtn">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivcreditcardId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/credit_card"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rltransactionpaymentid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivtransactionimgId"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="15sp"
                android:src="@drawable/transaction" />


            <RelativeLayout
                android:id="@+id/rltransactionbtnid"
                android:layout_width="@dimen/_128sdp"
                android:layout_height="@dimen/_42sdp"
                android:layout_below="@+id/ivtransactionimgId"
                android:layout_marginTop="10sp"
                android:background="@drawable/blankbtn">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/ivtransactionId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/transactions"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>

