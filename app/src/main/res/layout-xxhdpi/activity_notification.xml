<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".notificationPkg.NotificationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlbackgroundid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:background="@drawable/notificationbackimg">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:text="@string/notiifcation"
                    android:textColor="@color/lessBlack"
                    android:textSize="@dimen/_20sdp" />


            </RelativeLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivnotificationbackId"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="10sp"
                android:padding="5sp"
                android:src="@drawable/back" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivlogoid"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:src="@drawable/logo" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rlbackgroundid">


            <RelativeLayout
                android:id="@+id/rlnotificationId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15sp">


                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/notification" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rlPaymentNotificationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlnotificationId"
                android:layout_marginTop="25dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivpaymentId"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/notipaymentbtn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvpaymemttextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="30sp"
                    android:layout_toEndOf="@+id/ivpaymentId"
                    android:text="@string/payments"
                    android:textColor="@color/lessBlack"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15sp"
                    android:background="@drawable/notificationblankbtn">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvPaymentCountId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/_10"
                        android:textColor="@color/lessBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_below="@+id/rlPaymentNotificationId"
                android:layout_marginTop="10sp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlStatusNotificationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlPaymentNotificationId"
                android:layout_marginTop="25dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivstatusId"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/statusnotibtn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvstatustextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30sp"
                    android:layout_toEndOf="@+id/ivstatusId"
                    android:singleLine="true"
                    android:text="@string/missions_amp_demands_status"
                    android:textColor="@color/lessBlack"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15sp"
                    android:background="@drawable/notificationblankbtn">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStatusCountId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/_10"
                        android:textColor="@color/lessBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_below="@+id/rlStatusNotificationId"
                android:layout_marginTop="10sp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlOffersNotificationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlStatusNotificationId"
                android:layout_marginTop="25dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivoffersId"
                    android:layout_width="40sp"
                    android:layout_height="40sp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/offersnotibtn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvoffertextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30sp"
                    android:layout_toEndOf="@+id/ivoffersId"
                    android:text="@string/offers"
                    android:textColor="@color/lessBlack"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15sp"
                    android:background="@drawable/notificationblankbtn">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvOfferCountId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/_10"
                        android:textColor="@color/lessBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_below="@+id/rlOffersNotificationId"
                android:layout_marginTop="10sp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rlMsgNotificationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlOffersNotificationId"
                android:layout_marginTop="25dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivmsgId"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/msgnotibtn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvmsgtextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30sp"
                    android:layout_toEndOf="@+id/ivmsgId"
                    android:text="@string/messages"
                    android:textColor="@color/lessBlack"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15sp"
                    android:background="@drawable/notificationblankbtn">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMsgCountId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/_10"
                        android:textColor="@color/lessBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.1dp"
                android:layout_below="@+id/rlMsgNotificationId"
                android:layout_marginTop="10sp"
                android:background="@color/gray" />


            <RelativeLayout
                android:id="@+id/rlAvisNotificationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlMsgNotificationId"
                android:layout_marginTop="25dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivavisId"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/avisnotibtn" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvavistextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30sp"
                    android:layout_toEndOf="@+id/ivavisId"
                    android:text="@string/reviews"
                    android:textColor="@color/lessBlack"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15sp"
                    android:background="@drawable/notificationblankbtn">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvReviewCountId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/_10"
                        android:textColor="@color/lessBlack"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <ProgressBar
        android:visibility="gone"
        android:id="@+id/pbNotificationId"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>