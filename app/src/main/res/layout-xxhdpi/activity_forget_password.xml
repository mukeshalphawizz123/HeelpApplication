<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgetpasswordPkg.ForgetPasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivlogoid"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ivlogoid">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvloginid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15sp"
                android:text="Forget Password"
                android:textColor="@color/Black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/rlsignupbackgroundid"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@+id/tvloginid" />


            <RelativeLayout
                android:id="@+id/cvloginid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvloginid"
                android:gravity="center_vertical">


                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginStart="18sp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="18dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rounded_rectangle"
                    app:riv_corner_radius="10sp" />


                <LinearLayout
                    android:id="@+id/llEmailForgetId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="@dimen/_14sdp"
                    android:layout_marginEnd="18dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="25dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivemailId"
                            android:layout_width="23dp"
                            android:layout_height="22dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/user" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/etemailForgetid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/ivemailId"
                            android:background="@android:color/transparent"
                            android:gravity="left"
                            android:textSize="16sp"
                            android:textStyle="normal">


                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/tiewEmailForgetId"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10sp"
                                android:background="@android:color/transparent"
                                android:hint="@string/email"
                                android:inputType="text"
                                android:padding="4dp"
                                android:singleLine="true"
                                android:textColor="@color/Black"
                                android:textColorHint="@color/blue"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>


                    </RelativeLayout>

                    <View
                        android:id="@+id/viewIdemail"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ivpasswordid"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginEnd="20sp"
                        android:background="@color/colorAccent" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/rlForgetId"
                    android:layout_width="180sp"
                    android:layout_height="42dp"
                    android:layout_below="@+id/llEmailForgetId"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/selected_box">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvForgetId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Submit"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


        <ProgressBar
            android:visibility="invisible"
            android:id="@+id/pbForgetId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

</RelativeLayout>